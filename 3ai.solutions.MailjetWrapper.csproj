	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<RootNamespace>_3ai.solutions.MailjetWrapper</RootNamespace>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<Version>8.$([System.DateTime]::UtcNow.Date.Subtract($([System.DateTime]::Parse("2000-01-01"))).TotalDays).$([System.DateTime]::UtcNow.Hour)</Version>
		<PackageDescription>Simple wrapper for Brevo</PackageDescription>
		<RepositoryUrl>https://github.com/3AISolutions/3ai.solutions.MailjetWrapper/</RepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
		<PackageReference Include="Microsoft.Extensions.Http" Version="8.0.0" />
	</ItemGroup>

</Project>
